<div class="row">
  <div class="col-md-3 col-md-offset-4 vert-align">
    <div class="cred-form">

      <div class="home-link">
        <%= link_to "Hastigram", root_url %>
      </div>

      <div class="billabong">
        Instagram
      </div>

      <%= flash_messages %>

      <form class="form-horizontal" action="<%= users_url %>" method="POST">

        <%= render_auth_token %>
        <h5>Sign Up</h5>

       <div class="form-group">
        <label class="maxwidth">Email:
          <input type="text" class="form-control" name="user[email]" value="<%= @user.email %>">
        </label>
      </div>

      <div class="form-group">
        <label class="maxwidth">Username:
          <input type="text" class="form-control" name="user[username]" value="<%= @user.username %>">
        </label>
      </div>

      <div class="form-group">
        <label class="maxwidth">Password:
         <input type="password" class="form-control" name="user[password]">
        </label>
      </div>

      <div class="form-group">
        <input class="btn btn-default maxwidth" type="submit" value="Log In">
      </div>
      </form>

    </div>
      <%= link_to "Already registered? Sign In", new_session_url %>
  </div>
</div>
