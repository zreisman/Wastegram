
<div class="m-background-image"></div>
  <div class="col-md-4 col-sm-6">
    <div class="spacer"></div>
    <div class="cred-form">

      <div class="home-link billabong text-center">
        <%= link_to "Wastegram", root_url %>
      </div>

      <%= flash_messages %>

      <form class="form-horizontal" action="<%= users_url %>" method="POST">
        <%= render_auth_token %>
        <h5>Sign Up</h5>

       <div class="form-group">
        <label class="maxwidth">Email:
          <input type="text" class="form-control" name="user[email]" value="<%= @user.email %>">
        </label>
      </div>

      <div class="form-group">
        <label class="maxwidth">Username:
          <input type="text" class="form-control" name="user[username]" value="<%= @user.username %>">
        </label>
      </div>

      <div class="form-group">
        <label class="maxwidth">Password:
         <input type="password" class="form-control" name="user[password]">
        </label>
      </div>

      <div class="form-group">
        <input class="btn btn-default maxwidth" type="submit" value="Sign Up">
      </div>
      </form>

    </div>
      <%= link_to "Already registered? Sign In", new_session_url %>
  </div>

<script>
  $(document).ready(function(){


    var images = ['http://res.cloudinary.com/dvd7awvbl/image/upload/e_grayscale/zprlcjmy5pime95jdti5.jpg', 'http://res.cloudinary.com/dvd7awvbl/image/upload/b18gsbjebpen3jke58kb.jpg'];

    var url = images[Math.floor(Math.random() * images.length)];
    var img = new Image();
    img.onload = function(){
      $('.m-background-image').css({'background-image': 'url('+url+')', 'background-size' : 'cover'});
      $('.m-background-image').hide().fadeIn('slow');
    }
    img.src = url;
  });
</script>
